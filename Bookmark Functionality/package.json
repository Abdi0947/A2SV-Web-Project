{
  "name": "better-auth",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cross-env DATABASE_URL=file:./prisma/dev.db next dev --turbopack",
    "dev:local": "set DATABASE_URL=file:./prisma/dev.db && next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "prisma:push:dev": "set DATABASE_URL=file:./prisma/dev.db && npx prisma db push --schema=prisma/schema.dev.prisma",
    "prisma:pull:dev": "set DATABASE_URL=file:./prisma/dev.db && npx prisma db pull --schema=prisma/schema.dev.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "better-auth": "^1.4.7",
    "next": "^15.5.9",
    "nodemailer": "^7.0.11",
    "prisma": "^5.22.0",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-jest": "^30.2.0",
    "cypress": "^13.17.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
